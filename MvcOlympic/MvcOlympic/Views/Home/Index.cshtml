            @Html.DisplayNameFor(model => model.silver)
        </th>
                        <th>
            @Html.DisplayNameFor(model => model.bronze)
        </th>
    </tr>
</thead>
    <tbody>
@foreach (var item in Model) {
    <tr data-identity="@Html.DisplayFor(modelItem => item.id)">
        <td class="athlete">
             @Html.DisplayFor(modelItem => item.id)
        </td>
        <td>
