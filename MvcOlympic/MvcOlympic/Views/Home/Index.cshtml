<table id="athletes" class="table table-bordered table-striped table-hover">
<thead>
    <tr>
        <th>
            <p>Id</p>
        </th>
        <th>
            
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
                <th>
            @Html.DisplayNameFor(model => model.country)
        </th>
                <th>
            @Html.DisplayNameFor(model => model.gold)
        </th>
